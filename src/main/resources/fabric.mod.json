{
  "schemaVersion": 1,
  "id": "bettersavedhotbars",
  "version": "${version}",

  "name": "Better Saved Hotbar",
  "description": "This mod allows you to drag items into the saved hotbars tab and remove them by middle clicking!",
  "authors": [
    "LukynkaCZE"
  ],
  "contact": {
    "homepage": "https://lukynka.cz/",
    "sources": "https://github.com/LukynkaCZE/better-saved-hotbars"
  },

  "license": "MIT",
  "icon": "assets/bettersavedhotbars/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "cz.lukynka.bettersavedhotbars.BetterSavedHotbars"
    ]
  },
  "mixins": [
    "bettersavedhotbars.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.21",
    "fabric-api": "*",
    "minecraft": "~1.20",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
